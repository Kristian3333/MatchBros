<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Activity Buddy Finder</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            max-width: 1200px;
            margin: 0 auto;
            padding: 40px 20px;
            background: linear-gradient(135deg, #f5f7fa 0%, #e4e7eb 100%);
            min-height: 100vh;
            box-sizing: border-box;
        }
        .container {
            background-color: white;
            padding: 40px;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }
        h1 {
            color: #1a237e;
            text-align: center;
            margin-bottom: 40px;
            font-size: 3em;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
        }
        .form-group {
            margin: 25px 0;
            max-width: 600px;
            margin-left: auto;
            margin-right: auto;
        }
        label {
            display: block;
            margin-bottom: 10px;
            font-size: 1.2em;
            color: #2c3e50;
            font-weight: 500;
        }
        input[type="text"],
        input[type="number"] {
            width: 100%;
            padding: 15px;
            border: 2px solid #3498db;
            border-radius: 10px;
            font-size: 1.1em;
            transition: all 0.3s ease;
            background-color: #f8f9fa;
        }
        input[type="text"]:focus,
        input[type="number"]:focus {
            outline: none;
            border-color: #2980b9;
            box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.2);
            background-color: white;
        }
        input[type="number"] {
            max-width: 100px;
        }
        .button {
            background: linear-gradient(135deg, #3498db 0%, #2980b9 100%);
            color: white;
            padding: 15px 30px;
            border: none;
            border-radius: 30px;
            cursor: pointer;
            font-size: 1.2em;
            font-weight: 500;
            transition: all 0.3s ease;
            display: block;
            margin: 30px auto;
            min-width: 250px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }
        .button:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(52, 152, 219, 0.3);
            background: linear-gradient(135deg, #2980b9 0%, #2473a5 100%);
        }
        .nav-links {
            margin-top: 40px;
            text-align: center;
            padding-top: 20px;
            border-top: 2px solid #e9ecef;
        }
        .nav-links a {
            color: #3498db;
            text-decoration: none;
            margin: 0 15px;
            font-weight: 600;
            font-size: 1.1em;
            transition: all 0.3s ease;
        }
        .nav-links a:hover {
            color: #2980b9;
            text-decoration: underline;
        }
        .interest-scale {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-top: 5px;
        }
        .interest-scale span {
            color: #666;
            font-size: 0.9em;
        }
        .error {
            color: #e74c3c;
            font-size: 0.9em;
            margin-top: 5px;
        }
        @media (max-width: 768px) {
            body {
                padding: 20px;
            }
            .container {
                padding: 20px;
            }
            h1 {
                font-size: 2em;
            }
            .button {
                font-size: 1em;
                min-width: 200px;
                padding: 12px 24px;
            }
            label {
                font-size: 1.1em;
            }
            input[type="text"],
            input[type="number"] {
                font-size: 1em;
                padding: 12px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Activity Buddy Finder</h1>
        
        <form action="/api/users" method="POST">
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" required>
            </div>

            <div class="form-group">
                <label for="fitness">Fitness:</label>
                <div class="interest-scale">
                    <input type="number" id="fitness" name="interests[fitness]" min="0" max="10" required>
                    <span>(0-10)</span>
                </div>
            </div>

            <div class="form-group">
                <label for="goingOut">Going Out:</label>
                <div class="interest-scale">
                    <input type="number" id="goingOut" name="interests[goingOut]" min="0" max="10" required>
                    <span>(0-10)</span>
                </div>
            </div>

            <div class="form-group">
                <label for="timFerriss">Tim Ferriss:</label>
                <div class="interest-scale">
                    <input type="number" id="timFerriss" name="interests[timFerriss]" min="0" max="10" required>
                    <span>(0-10)</span>
                </div>
            </div>

            <div class="form-group">
                <label for="chess">Chess:</label>
                <div class="interest-scale">
                    <input type="number" id="chess" name="interests[chess]" min="0" max="10" required>
                    <span>(0-10)</span>
                </div>
            </div>

            <div class="form-group">
                <label for="entrepreneurship">Entrepreneurship:</label>
                <div class="interest-scale">
                    <input type="number" id="entrepreneurship" name="interests[entrepreneurship]" min="0" max="10" required>
                    <span>(0-10)</span>
                </div>
            </div>

            <div class="form-group">
                <label for="gaming">Gaming:</label>
                <div class="interest-scale">
                    <input type="number" id="gaming" name="interests[gaming]" min="0" max="10" required>
                    <span>(0-10)</span>
                </div>
            </div>

            <div class="form-group">
                <label for="andrewHuberman">Andrew Huberman:</label>
                <div class="interest-scale">
                    <input type="number" id="andrewHuberman" name="interests[andrewHuberman]" min="0" max="10" required>
                    <span>(0-10)</span>
                </div>
            </div>

            <button type="submit" class="button">Let's Gooo</button>
        </form>

        <div class="nav-links">
            <a href="/users">View All Users</a> |
            <a href="/activities">View Activity Groups</a>
        </div>
    </div>

    <script>
        document.querySelector('form').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            try {
                const formData = new FormData(e.target);
                const data = {
                    name: formData.get('name'),
                    interests: {
                        fitness: parseInt(formData.get('interests[fitness]')),
                        goingOut: parseInt(formData.get('interests[goingOut]')),
                        timFerriss: parseInt(formData.get('interests[timFerriss]')),
                        chess: parseInt(formData.get('interests[chess]')),
                        entrepreneurship: parseInt(formData.get('interests[entrepreneurship]')),
                        gaming: parseInt(formData.get('interests[gaming]')),
                        andrewHuberman: parseInt(formData.get('interests[andrewHuberman]'))
                    }
                };

                const response = await fetch('/api/users', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(data)
                });

                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }

                window.location.href = '/activities';
            } catch (error) {
                console.error('Error:', error);
                alert('Failed to submit form. Please try again.');
            }
        });
    </script>
</body>
</html>